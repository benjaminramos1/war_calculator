
	<div class="row-fluid">
		<div class="span12">
			<div class="page-header">
				<h1>FIP Calculator</h1>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span3">
			<h3>How to use the FIP Calculator</h3>
		</div>
		<div class="span6">
			<div class="center hero-unit">
				<%= form_tag('/fcalculate') do %>
					<%= label_tag(:hr, "HR") %>
					<%= text_field_tag(:hr) %><br />
					<%= label_tag(:bb, "Walks") %>
					<%= text_field_tag(:bb) %><br />
					<%= label_tag(:hbp, "Hit by Pitch") %>
					<%= text_field_tag(:hbp) %><br />
					<%= label_tag(:k, "Strikeouts") %>
					<%= text_field_tag(:k) %><br />
					<%= label_tag(:ip, "Innings Pitched") %>
					<%= text_field_tag(:ip) %><br />
					<%= submit_tag("Calculate") %><br />
					<%= text_field_tag(:r, @result, :disabled => true) %>
				<% end %>
			</div>
		</div>
		<div class="span3">
			<h3>FIP Ratings Table</h3>
			<p>From <a href = "http://www.fangraphs.com/library/pitching/fip/">Fangraphs</a></p>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Rating</th>
						<th>FIP</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Excellent</td>
						<td>2.90</td>
					</tr>
					<tr>
						<td>Great</td>
						<td>3.25</td>
					</tr>
					<tr>
						<td>Above Average</td>
						<td>3.75</td>
					</tr>
					<tr>
						<td>Average</td>
						<td>4.00</td>
					</tr>
					<tr>
						<td>Below Average</td>
						<td>4.20</td>
					</tr>
					<tr>
						<td>Poor</td>
						<td>4.50</td>
					</tr>
					<tr>
						<td>Awful</td>
						<td>5.00</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>