
<div class="row-fluid">
		<div class="span12">
			<div class="page-header">
				<h1>Batter WAR Calculator</h1>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span3">
			<h3>How to use the Batter WAR Calculator</h3>
		</div>
		<div class="span6">
			<div class="center hero-unit">
				<%= form_tag('/bcalculate') do %>
					<%= label_tag(:position, "Primary Position") %>
					<%= select_tag(:position, options_for_select([['C', 1],['1B', 2], ['2B', 3], ['3B', 4], ['SS', 5], ['LF', 6], ['CF', 7], ['RF', 8]], 1)) %>
					<%= label_tag(:bb, "Walks") %>
					<%= text_field_tag(:bb) %><br />
				<% end %>
			</div>
		</div>
		<div class="span3">
			<h3>WAR Ratings Table</h3>
			<p>From <a href = "http://www.fangraphs.com/library/misc/war/">Fangraphs</a>.  Notice this chart is for a whole season.</p>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Rating</th>
						<th>WAR</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Scrub</td>
						<td>0-1 WAR</td>
					</tr>
					<tr>
						<td>Role Player</td>
					<td>1-2 WAR</td>
				</tr>
				<tr>
					<td>Solid Starter</td>
					<td>2-3 WAR</td>
				</tr>
				<tr>
					<td>Good Player</td>
					<td>3-4 WAR</td>
				</tr>
				<tr>
					<td>All-Star</td>
					<td>4-5 WAR</td>
				</tr>
				<tr>
					<td>Starter</td>
					<td>5-6 WAR</td>
				</tr>
				<tr>
					<td>MVP</td>
					<td>6+ WAR</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
